<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragmentAbout_img"
            android:layout_margin="@dimen/spacing_m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/about_img_001"
            android:layout_width="0dp"
            android:layout_height="200dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_text"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/spacing_l"
            app:layout_constraintStart_toStartOf="@id/fragmentAbout_guide_start"
            app:layout_constraintTop_toBottomOf="@+id/fragmentAbout_img"
            app:layout_constraintEnd_toEndOf="@+id/fragmentAbout_guide_end"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragmentAbout_guide_start"
            app:layout_constraintGuide_begin="@dimen/spacing_m"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragmentAbout_guide_end"
            app:layout_constraintGuide_end="@dimen/spacing_m"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>